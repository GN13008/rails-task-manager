<div class="container m-4">
  <h1>My Tasks</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
        <i class="far <%= task.completed ? "fa-check-square" : "far fa-square" %>"></i><%= link_to " #{task.title}", task_path(task) %>
        <%= link_to ("<i class=\"far fa-trash-alt\"></i>").html_safe,
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
    <li class="list-group-item"><%= link_to "New task", tasks_new_path %></li>
  </ul>
</div>

